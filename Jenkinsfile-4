pipeline {
  agent none
  options {
    timeout(time: 30, unit: 'SECONDS') 
  }
  stages {
    stage('input') {
      agent any
      input {
        message "What is your first name?"
        ok "Submit"
        parameters {
          string(defaultValue: 'Dave', name: 'FIRST_NAME', trim: true) 
        }
      }
      options {
        timeout(time: 10, unit: 'SECONDS') 
      }
      steps {
        script {
          echo "Good Morning, $FIRST_NAME"
          try {
            sh 'hostname'
            if (fileExists('/etc/redhat-release')) {
              sh 'cat /etc/redhat-release'
            } else {
              echo "File /etc/redhat-release does not exist"
            }
          } catch (Exception e) {
            echo "An error occurred: ${e.message}"
          }
        }
      }
    }
  }
}

ddef filePath = '/etc/redhat-release'

// Check if the file exists using the readFile step
try {
    def fileContent = readFile(filePath)
    println "File content: ${fileContent}"
} catch (FileNotFoundException e) {
    println "File $filePath does not exist"
}
